<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
<div class="">

  <%- include ../partials/head.html.ejs %>

</div>
    <div class="welcome">
      <% include ../partials/welcome.html.ejs %>

    </div>
  </head>
  <body>
<div class = container>
  <% members.forEach(function(member) { %>
    <div class= "individualmember">
      <div> <%= member.members_id %> </div>
      <div> Name: <%= member.member_name %> </div>
      <div> Email: <%= member.email %> </div>
      <div> DOB: <%= member.birthday %> </div>
      <form action="/members/all" method="post">
        <input type="hidden" name="members_id" value= <%= me %> >
        <input type="hidden" name="friend_id" value=<%=member.members_id%>>
        <button type="submit">Add Friend</button>
      </form>


      <div class="messages">
        <form class="" action="/members/message" method="post">
          <textarea name="message" rows="8" cols="40">Send Message</textarea>
          <input type="hidden" name="friend_id" value=<%=member.members_id%>>

          <button type="submit"  name="message">Send Message</button>
        </form>
      </div>



    </div>
  <% }) %>
</div>


 </body>

</html>
